<Window x:Class="MemSearch.EditValueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemSearch"
        mc:Ignorable="d"
        Title="Edit Value" Height="145" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#FF979797">
    <Grid>
        <TextBox x:Name="ValueTextBox" HorizontalAlignment="Left" Height="26" Margin="2,26,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="208"/>
        <Label x:Name="ValueLabel" Content="Value" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="65,0,0,0"/>
        <Button x:Name="SetButton" Content="Set" HorizontalAlignment="Center" Height="33" Margin="0,57,0,0" VerticalAlignment="Top" Width="280" Click="SetButton_Click"/>
        <CheckBox x:Name="FrozenCheckBox" Content="Frozen" HorizontalAlignment="Left" Margin="215,31,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
